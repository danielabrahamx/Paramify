{
  "version": 1,
  "dfx": "0.16.1",
  "canisters": {
    "insurance": {
      "type": "motoko",
      "main": "src/canisters/insurance/main.mo",
      "declarations": {
        "output": "src/declarations/insurance",
        "bindings": ["js", "ts", "did"],
        "node_compatibility": true
      }
    },
    "oracle": {
      "type": "rust",
      "package": "oracle",
      "candid": "src/canisters/oracle/oracle.did",
      "declarations": {
        "output": "src/declarations/oracle",
        "bindings": ["js", "ts", "did"],
        "node_compatibility": true
      }
    },
    "payments": {
      "type": "motoko",
      "main": "src/canisters/payments/main.mo",
      "declarations": {
        "output": "src/declarations/payments",
        "bindings": ["js", "ts", "did"],
        "node_compatibility": true
      }
    },
    "frontend": {
      "type": "assets",
      "source": ["frontend/dist"],
      "declarations": {
        "output": "src/declarations/frontend",
        "bindings": ["js", "ts", "did"],
        "node_compatibility": true
      }
    }
  },
  "defaults": {
    "build": {
      "packtool": "",
      "args": ""
    }
  },
  "output_env_file": ".env",
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral",
      "replica": {
        "subnet_type": "system"
      }
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  }
}